{
  "manifest_version": 3,
  "name": "Browser Pet üê±",
  "version": "1.0",
  "description": "A cute pet that reacts to your browsing behavior",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["pet.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pet.html", 
        "pet.js", 
        "pet.css",
        "images/*.gif",
        "images/*.png",
        "images/*.jpg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
